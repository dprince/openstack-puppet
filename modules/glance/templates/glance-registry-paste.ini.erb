# Default minimal pipeline
[pipeline:glance-registry]
pipeline = unauthenticated-context registryapp

# Use the following pipeline for keystone auth
# i.e. in glance-registry.conf:
#   [paste_deploy]
#   flavor = keystone
#
[pipeline:glance-registry-keystone]
pipeline = authtoken context registryapp

[app:registryapp]
paste.app_factory = glance.common.wsgi:app_factory
glance.app_factory = glance.registry.api.v1:API

[filter:context]
paste.filter_factory = glance.common.wsgi:filter_factory
glance.filter_factory = glance.common.context:ContextMiddleware

[filter:unauthenticated-context]
paste.filter_factory = glance.common.wsgi:filter_factory
glance.filter_factory = glance.common.context:UnauthenticatedContextMiddleware

[filter:authtoken]
paste.filter_factory = keystone.middleware.auth_token:filter_factory
service_protocol = <%= keystone_service_protocol %>
service_host = <%= keystone_service_host %>
service_port = <%= keystone_service_port %>
auth_host = <%= keystone_auth_host %>
auth_port = <%= keystone_auth_port %>
auth_protocol = <%= keystone_auth_protocol %>
auth_uri = <%= keystone_auth_uri %>
admin_user = <%= keystone_admin_user %>
admin_password = <%= keystone_admin_password %>
admin_tenant_name = <%= keystone_admin_tenant_name %>
